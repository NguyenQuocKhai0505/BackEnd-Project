extends ../../layout/default.pug

block main
    .container.my-3
        .row 
            .col-12
                if product.title
                    h1.mb-4 #{product.title}
                
                if product.price
                    div.mb-4 Giá: 
                        b #{product.price}$
                
                if product.discountPercentage
                    div.mb-4 Giảm giá: 
                        b #{product.discountPercentage}%
                
                if product.stock
                    div.mb-4 Còn lại: 
                        b #{product.stock} sản phẩm
                
                if product.thumbnail
                    div.mb-4
                        img(
                            src=product.thumbnail
                            class="product-image"
                        )
                
                if product.position
                    div.mb-4 Vị trí: 
                        b #{product.position}
                
                if product.description
                    div.mb-4 Mô tả: #{product.description}
