extends ../../layout/default.pug 

block main
    .product-detail
        if(product.title)
            h1.mb-4 #{product.title} 
        
        if(product.price)
            div.mb-4 Giá: <b> #{product.price}$</b>
        
        if(product.discountPercentage)
            div.mb-4 Giảm giá: <b>#{product.discountPercentage}$</b>
        
        if(product.stock)
            div.mb-4 Còn lại: <b>#{product.stock}$</b>
        
        if(product.thumbnail)
            div.mb-4
                img(
                    src=product.thumbnail
                    class="product-image"
                )
        
        if(product.status)
            div.mb-4
                span Trạng thái 
                if(product.status === "active")
                    span.badge.badge-success Hoạt động
                else
                    span.badge.badge-danger Dừng hoạt động
        
        if(product.position)
            div.mb-4 Vị trí: <b>#{product.position}$</b>
        
        if(product.description)
            div.mb-4 #{product.description}
        if (product._id)
            div.mt-4
               a.btn.btn-primary(href=`/admin/products/edit/${product._id}`) Chỉnh sửa

    script(src="/admin/js/product.js")
